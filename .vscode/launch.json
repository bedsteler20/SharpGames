{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/bin/Debug/net7.0/SharpGames.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "externalTerminal",
            "internalConsoleOptions": "neverOpen",
            "externalConsole": true,
             "linux": {
                "postDebugTask": "kill-term"
             },
            "env": {
                "BLADE_SKIP_INTO": "1",
                "BLADE_NO_SOUND": "1"
            }
        }
    ],
    "compounds": []
}
